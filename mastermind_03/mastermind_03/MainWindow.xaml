<Window x:Class="mastermind_03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mastermind_03"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="700">
    <Grid>
        <!-- ComboBox for selecting the number of colors -->
        <ComboBox Name="ColorCountComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Width="120" SelectionChanged="ColorCountComboBox_SelectionChanged">
            <ComboBoxItem Content="4 Colors" />
            <ComboBoxItem Content="5 Colors" />
            <ComboBoxItem Content="6 Colors" />
        </ComboBox>

        <!-- ComboBoxes for selecting colors -->
        <ComboBox Name="ComboBox1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0" Width="120" SelectionChanged="ComboBox_SelectionChanged"/>
        <ComboBox Name="ComboBox2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="140,40,0,0" Width="120" SelectionChanged="ComboBox_SelectionChanged"/>
        <ComboBox Name="ComboBox3" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="270,40,0,0" Width="120" SelectionChanged="ComboBox_SelectionChanged"/>
        <ComboBox Name="ComboBox4" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="400,40,0,0" Width="120" SelectionChanged="ComboBox_SelectionChanged"/>

        <!-- Ellipses for color feedback -->
        <Ellipse Name="FeedbackEllipse1" Width="60" Height="60" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40,67,0,0" Fill="Transparent" RenderTransformOrigin="1.164,0.39"/>
        <Ellipse Name="FeedbackEllipse2" Width="60" Height="60" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="170,62,0,0" Fill="Transparent"/>
        <Ellipse Name="FeedbackEllipse3" Width="60" Height="60" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="300,67,0,0" Fill="Transparent"/>
        <Ellipse Name="FeedbackEllipse4" Width="60" Height="60" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="430,67,0,0" Fill="Transparent" RenderTransformOrigin="1.002,0.027"/>

        <!-- Labels for score and attempts -->
        <Label Name="ScoreLabel" Content="Score: 100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,120,0,0"/>
        <Label Name="AttemptsLabel" Content="Attempts Left: 10" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,150,0,0"/>
        <Label Name="PlayerLabel" Content="Current Player: Player 1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,180,0,0"/>

        <!-- Button for checking guess -->
        <Button Content="Check Guess" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="10,220,0,0" Click="CheckButton_Click"/>

        <!-- Button for buying a hint -->
        <Button Content="Buy Hint" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="120,220,0,0" Click="BuyHintButton_Click"/>

        <!-- ListBox for displaying feedback history -->
        <ListBox Name="ListBoxHistory" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,260,0,0" Width="560" Height="200"/>

        <!-- Tooltips for borders -->
        <Border Name="Border1" BorderBrush="Transparent" BorderThickness="2" Width="30" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,480,0,0">
            <Border.ToolTip>
                <ToolTip Content="Wrong Color" />
            </Border.ToolTip>
        </Border>
        <Border Name="Border2" BorderBrush="Transparent" BorderThickness="2" Width="30" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,480,0,0">
            <Border.ToolTip>
                <ToolTip Content="Wrong Color" />
            </Border.ToolTip>
        </Border>
        <Border Name="Border3" BorderBrush="Transparent" BorderThickness="2" Width="30" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="90,480,0,0">
            <Border.ToolTip>
                <ToolTip Content="Wrong Color" />
            </Border.ToolTip>
        </Border>
        <Border Name="Border4" BorderBrush="Transparent" BorderThickness="2" Width="30" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="130,480,0,0">
            <Border.ToolTip>
                <ToolTip Content="Wrong Color" />
            </Border.ToolTip>
        </Border>
    </Grid>
</Window>

